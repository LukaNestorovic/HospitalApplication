<Window x:Class="ProjekatSIMS.View.PatientView.Medicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS.View.PatientView"
        mc:Ignorable="d"
        Title="Medicine" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="PatientAppointments" Margin="37,103,36,31" CanUserAddRows="False" AutoGenerateColumns="False" ItemsSource="{Binding pregledi}">

            <DataGrid.Columns>


                <DataGridTextColumn Header="Id" Binding="{Binding Id}"    Width="25"/>
                <DataGridTextColumn Header="Instructions" Binding="{Binding Instructions}"   Width="*"/>
                <DataGridTextColumn Header="Doctor"  Binding="{Binding doctor}" Width="*"/>
                <DataGridTextColumn Header="Patient"  Binding="{Binding patient}" Width="*"/>
                <DataGridTextColumn Header="Drug"  Binding="{Binding drug}" Width="*"/>
                <DataGridTextColumn Header="Start"  Binding="{Binding datetime}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Back" HorizontalAlignment="Left" Margin="37,37,0,0" VerticalAlignment="Top" Width="40" Height="25" Click="Button_Click"/>

    </Grid>
</Window>
