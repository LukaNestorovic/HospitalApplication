        <Button Content="Appointments" HorizontalAlignment="Center" Margin="0,249,0,0" VerticalAlignment="Top" Height="98" Width="179" Click="Appointments_Click" Background="#66A5AD" FontSize="26"/>
        <Button Content="Medicine" HorizontalAlignment="Center" Margin="0,525,0,0" VerticalAlignment="Top" Height="98" Width="180" Click="Medicine_Click" Background="#66A5AD" FontSize="26"/>
        <Button Content="LogOff" HorizontalAlignment="Left" Margin="861,3,0,0" VerticalAlignment="Top" Height="55" Width="153" Click="LogOff_Click" FontSize="18" Background="#66A5AD" Foreground="Black"/>
        <Label Content="Home" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Height="48" Width="84" FontSize="28" Foreground="White" RenderTransformOrigin="0.474,0.227"/>

    </Grid>
